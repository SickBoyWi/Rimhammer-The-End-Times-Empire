<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef>
		<defName>RH_TET_Empire_BeeHive</defName>
		<label>bee hive</label>
		<description>A beehive is an enclosed, man-made structure in which honey bees live and raise their young. People of the Empire are quite fond of the honey that can be harvested from the bees inside, as it's great for making mead, cooking, and as alone as a sweet treat.</description>
		<thingClass>Building_WorkTable</thingClass>
		<category>Building</category>
		<thingCategories>
			<li>RH_TET_Empire_BuildingsProduction</li>
		</thingCategories>
		<graphicData>
			<texPath>Things/Buildings/Production/BeeHive/RH_TET_Empire_BeeHive</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1,1)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<size>(1,1)</size>
		<rotatable>true</rotatable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
		<repairEffect>Repair</repairEffect>
		<selectable>true</selectable>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<fillPercent>0.5</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>90</pathCost>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<blockWind>false</blockWind>
		<altitudeLayer>Building</altitudeLayer>
		<minifiedDef>MinifiedThing</minifiedDef>
		<costList>
			<WoodLog>20</WoodLog>
			<Steel>10</Steel>
			<RH_TET_Empire_QueenBee>1</RH_TET_Empire_QueenBee>
		</costList>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<surfaceType>Item</surfaceType>
		<useHitPoints>True</useHitPoints>
		<tickerType>Normal</tickerType>
		<statBases>
			<WorkToBuild>1500</WorkToBuild>
			<MaxHitPoints>120</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Mass>15</Mass>
			<SellPriceFactor>0.75</SellPriceFactor>
		</statBases>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<comps>
			<li Class="TheEndTimes_Empire.CompProperties_BeeHive">
				<compClass>TheEndTimes_Empire.CompBeeHive</compClass>
				<updateTicks>1450</updateTicks>
				<activeTempRange>
					<min>10</min>
					<max>40</max>
				</activeTempRange>
				<resourceIntervalDays>3</resourceIntervalDays>
				<rangeThings>17</rangeThings>
				<thingsCountMin>50</thingsCountMin>
				<resources>
					<resourceDef>RH_TET_Empire_Honey</resourceDef>
					<resourceCount>5</resourceCount>
				</resources>
			</li>
		</comps>
		<specialDisplayRadius>15</specialDisplayRadius>
		<placeWorkers>
			<li>TheEndTimes_Empire.Placeworker_ShowBeeHiveRange</li>
		</placeWorkers>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<researchPrerequisites>
			<li>RH_TET_Empire_Gardening_Advanced</li>
		</researchPrerequisites>
		<designationCategory>Production</designationCategory>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>RH_TET_Empire_FermenterMead</defName>
		<label>mead fermenter</label>
		<description>A fermenter for turning raw mead must into mead.\n\nThe pleasant climate in the Empire means there are many bees around. Some of those bees produce honey. It was long ago that the men of the Empire figured out how to turn that honey into a delicious alcoholic beverage.</description>
		<category>Building</category>
		<thingClass>TheEndTimes_Empire.Building_FermenterMead</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Buildings/Production/RH_TET_Empire_MeadFermenter</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<damageData>
				<rect>(0.05,0.1,0.9,0.9)</rect>
			</damageData>
		</graphicData>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>RH_TET_Empire_BuildingsProduction</li>
		</thingCategories>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.45</fillPercent>
		<pathCost>60</pathCost>
		<statBases>
			<WorkToBuild>600</WorkToBuild>
			<Mass>10</Mass>
			<MaxHitPoints>120</MaxHitPoints>
			<Flammability>.5</Flammability>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>10</costStuffCount>
		<costList>
			<WoodLog>25</WoodLog>
		</costList>
		<comps>
			<li Class="CompProperties_TemperatureRuinable">
				<minSafeTemperature>-1</minSafeTemperature>
				<maxSafeTemperature>32</maxSafeTemperature>
				<progressPerDegreePerTick>0.00001</progressPerDegreePerTick>
			</li>
		</comps>
		<tickerType>Rare</tickerType>
		<rotatable>false</rotatable>
		<designationCategory>Production</designationCategory>
		<researchPrerequisites><li>RH_TET_Empire_Brewing</li></researchPrerequisites>
	</ThingDef>

