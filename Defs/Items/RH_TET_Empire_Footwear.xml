			</skillRequirements>
		</recipeMaker>
		<costStuffCount>60</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<apparel>
			<bodyPartGroups>
				<li>Legs</li>
			</bodyPartGroups>
		</apparel>
	</ThingDef>
  
