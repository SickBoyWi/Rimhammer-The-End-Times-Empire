			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.8</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Items/Hats/RH_TET_Empire_Hat_WizardLow/RH_TET_Empire_Wizard_HatLow</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>RH_TET_Empire_Apparel_Wizard</li>
			</tags>
			<defaultOutfitTags>
				<li>RH_TET_Empire_WizardStandard</li>
				<li>RH_TET_Empire_WizardGreat</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(1.0,1.0,1.0,1)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.1,0.1,0.1,1)</only>
				</li>
				<li><!-- Red -->
